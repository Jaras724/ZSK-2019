#include <iostream>
#include <cstdio>
using namespace std;


    void zmien(int *wsk) //definicja funkcji
    {
        *wsk = *wsk+10;
    }

int main()
{
    int a=3;
    int *wsk;
    wsk=&a;
    cout<<"zmienna 'a' ma wartosc: "<<a<<endl;
    zmien(wsk);         //wywoÅ‚anie funkcji
    cout<<"Teraz zmienna 'a' ma wartosc "<<a;
    getchar();
    return 0;
}
